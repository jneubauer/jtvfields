<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="attribs" >
        <fieldset name="custom" label="Joomla TV">

            <field name="tv_video_url"
                type="url"
                label="Video Url *"
                description="Please enter the video url. Only YouTube and Vimeo hosted videos are allowed"
                /> 
            
             <field name="tv_video_id"
                type="text"
                label="Video ID"
                /> 
            
            <field name="tv_speaker"
                type="text"
                label="Speaker *"
                /> 
                
            <field name="tv_speaker_twitter"
                type="text"
                label="Speaker Twitter Handle"
                />
                
            <field name="tv_session_date"
                   type="calendar"
                   label="Recording Date *"
                   format="%d-%B-%Y"
                   />


        </fieldset>
    </fields>
</form>